<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whatsapp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h2>All Chats!!</h2>
    <form action="/chats/new" method="GET">
        <button>New Chat</button>
    </form>
    <% for(let chat of chats) { %>
        <div class="chat">
            <p>From:<i> <%= chat.from %> </i></p>
           <div class="msg">
              <p><%= chat.message %></p>
              <form method="GET" action="/chats/<%= chat._id %>/edit">
                <button class="btn">Edit</button>
              </form> <br>

              <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                <button class="btn1">Delete</button>
              </form>

              <form  action="/chats/<%= chat._id %>?_method=GET">
                <button class="btn1">Show</button>
              </form>

           </div>
            <p>Received by: <i><%= chat.to %></p></i>
            <hr>
            <p><%= chat.created_at.toString().split(" ")[4] %></p>
            <p><%= chat.created_at.toString().split(" ").slice(0,4).join("- ") %></p>
            </div>
            <br> <br>
   <% } %>
   

</body>
</html>

